@page "/orders/{orderId:int}"
@inject IOrderService OrderService


@if (order == null)
{
    <span>Loading order...</span>
}
else
{
    <h3>Order from @order.OrderDate</h3>

    <div>
        @foreach (var product in order.Products)
        {
            <div class="container">
                <div class="image-wrapper">
                    <img src="@product.ImageUrl" class="image" />
                </div>
                <div class="name">
                    <h5><a href="/product/@product.ProductId">@product.ProductName</a></h5>
                    <br />
                    <span>Quantity: @product.Quantity</span>
                </div>
                <div class="product-price">$@product.TotalPrice</div>
            </div>
        }
        <div class="product-price">
            Total: $@order.OrderPrice
        </div>
    </div>
}

@code {
    [Parameter]
    public int orderId { get; set; }

    private OrderDetailsDTO order = null;

    protected override async Task OnInitializedAsync()
    {
        order = await OrderService.GetOrderDetailsAsync(orderId);
    }
}
